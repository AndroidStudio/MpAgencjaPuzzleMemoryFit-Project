<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/white_animals_panel"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/white_animal_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/white_animal_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/white_animal_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/white_animal_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/panel"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/panel">

        <ImageButton
            android:id="@+id/animal_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/animal_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/animal_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/animal_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>
    </LinearLayout>

</RelativeLayout>